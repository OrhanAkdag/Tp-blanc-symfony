{% extends 'base.html.twig' %}

{% block title %}Admin - Listes des articles{% endblock %}

{% block body %}

<div class="bg-light vh-100">
    <div class="container my-2">       
        <h1 class="bg-primary text-white p-2 text-center">Listes des articles</h1>
        <table class="table shadow bg-white">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Titre</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date d'ajout</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
            <tr>
                <th scope="row">{{ article.id }}</th>
                <td>
                    <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('list_thumb') }}" class="w-100">
                </td>
                <td>{{ article.titre }}</td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.createdAt|date('d/m/Y') }}</td>
                <td>
                    <a href="{{ path('detail_article', {'article': article.id}) }}"><i class="fas fa-eye mx-2"></i></a>
                    <a href="{{ path('update_article', {'article': article.id}) }}"><i class="fas fa-edit mx-2"></i></a>
                    <a href="{{ path('delete_article', {'article': article.id}) }}"><i class="fas fa-trash mx-2"></i></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div>
            <a href="{{ path('add_article')}}" class="nav-item btn btn-primary mx-2 text-white">
                Ajouter un article
            </a>  
        </div>  
    </div>
</div>
{% endblock %}

