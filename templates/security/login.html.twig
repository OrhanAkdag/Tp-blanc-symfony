{% extends 'base.html.twig' %}

{% block title %}Connection!{% endblock %}

{% block body %}
<div class="container my-2">
    <form method="post" class="shadow p-5">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        {% if app.user %}
            <div class="mb-3">
            {{ app.user.username }} est connecté, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}
    
        <h2 class="h3 mb-3 text-center text-white p-2 bg-primary">
            <i class="fas fa-sign-in-alt mx-2"></i>
            Veuillez vous connecter
        </h2>
        <div class="alert alert-success" role="alert">
            Email: admin@admin.fr <br>
            mot de passe: admin
        </div>
        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="mt-2">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>  
            <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="form-group form-check">
            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
            <label for="remember_me">Se souvenir de moi</label>
        </div>
        <button class="btn btn-lg btn-primary my-4" type="submit">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}
